<!DOCTYPE html>
<html>
<head>
  <title>Busca de Astros - NASA APOD</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <style>
    .carousel {
      display: flex;
      overflow-x: auto;
      gap: 20px;
      padding: 20px 0;
    }
    .carousel img {
      max-height: 400px;
      border-radius: 10px;
      box-shadow: 0 2px 8px #0003;
    }
    .carousel::-webkit-scrollbar {
      height: 10px;
    }
    .carousel::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 5px;
    }
    .carousel::-webkit-scrollbar-track {
      background: #eee;
        border-radius: 5px;

    }
    .carousel-item {
      min-width: 400px;
      flex: 0 0 auto;
      text-align: center;
    }
    .error { color: red; }
  </style>
</head>
<body>
  <h1>Busca de Astros - NASA APOD</h1>
  <form method="POST" action="/apod/search">
    <input type="text" name="astro" placeholder="Digite o nome do astro" value="<%= query %>" required>
    <button type="submit">Buscar</button>
  </form>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>
  <% if (images && images.length > 0) { %>
    <div class="carousel">
      <% images.forEach(function(img) { %>
        <div class="carousel-item">
          <img src="<%= img.url %>" alt="<%= img.title %>">
          <h3><%= img.title %></h3>
          <p><%= img.date %></p>
        </div>
      <% }); %>
    </div>
  <% } else if (images) { %>
    <p>Nenhuma imagem encontrada para o termo informado.</p>
  <% } %>
  <p><a href="/">Voltar ao in√≠cio</a></p>
</body>
</html>
